  <script>
    // Loader: fade out without white flash
    window.addEventListener('DOMContentLoaded', function() {
      setTimeout(function () {
        const loader = document.getElementById('loader-overlay');
        loader.classList.add('hidden');
        setTimeout(() => {
          loader.style.display = 'none';
          document.body.classList.remove('loading');
        }, 500);
      }, 1500);
    });

    // Hamburger toggle
    const menuToggle = document.querySelector('.menu-toggle');
    const navMenu = document.getElementById('nav-menu');
    menuToggle.addEventListener('click', () => {
      navMenu.classList.toggle('active');
    });
    navMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        navMenu.classList.remove('active');
      });
    });

    // Mobile dropdown toggle
    document.querySelectorAll('nav ul li.dropdown > a').forEach(toggle => {
      toggle.addEventListener('click', e => {
        if(window.innerWidth <= 991) {
          e.preventDefault();
          const parentLi = e.target.closest('li.dropdown');
          parentLi.classList.toggle('active');
        }
      });
    });

    // Carousel initialization etc. (No changes)

    // Contact form validation (No changes)

    // Load Startup Advisory content inline from external file on click
    function loadStartupAdvisory(e) {
      e.preventDefault();
      const container = document.getElementById('startup-advisory-content');
      if(container.style.display === 'block') {
        container.scrollIntoView({behavior: 'smooth'});
        return;
      }
      container.style.display = 'block';
      container.innerHTML = '<p>Loading content...</p>';
      fetch('startup-advisory.html')
        .then(res => {
          if (!res.ok) throw new Error('Failed to load advisory content.');
          return res.text();
        })
        .then(html => {
          const tempDiv = document.createElement('div');
          tempDiv.innerHTML = html;
          // Attempt to extract main content only (change selector if different)
          let mainContent = tempDiv.querySelector('#main, .main, main')?.innerHTML ?? tempDiv.body.innerHTML ?? html;
          container.innerHTML = `<button id="start-advisory-close" aria-label="Close advisory section">Close Ã—</button>` + mainContent;
          container.scrollIntoView({behavior: 'smooth'});
          document.getElementById('start-advisory-close').onclick = () => {
            container.style.display = 'none';
          };
        })
        .catch(err => {
          container.innerHTML = `<p style="color:red;">Error loading advisory content: ${err.message}</p>`;
        });
    }

    document.getElementById('startup-advisory-link').addEventListener('click', loadStartupAdvisory);
    document.getElementById('startup-advisory-link-alt').addEventListener('click', loadStartupAdvisory);
  </script>
