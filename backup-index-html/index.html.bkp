    /* your existing CSS here (no changes, included in original code) */

    /* === Additional styles for loader animation === */
    #loader-overlay {
      position: fixed;
      left: 0; top: 0;
      width: 100vw; height: 100vh;
      background: var(--blue);
      z-index: 99999;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 1;
      visibility: visible;
      transition: opacity 0.5s ease, visibility 0.5s ease;
    }
    #loader-overlay.hidden {
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
    }
    .dot-loader {
      display: flex;
      gap: 18px;
    }
    .dot-loader div {
      width: 18px; height: 18px;
      border-radius: 50%;
      background: var(--green);
      opacity: 0.75;
      animation: dotPulse 1.15s infinite cubic-bezier(.36,0,.64,1.07);
    }
    .dot-loader div:nth-child(2) {
      animation-delay: 0.23s;
      background: #21b3ff;
    }
    .dot-loader div:nth-child(3) {
      animation-delay: 0.46s;
      background: #5e86ff;
    }
    @keyframes dotPulse {
      0%, 100% { opacity: 0.72; transform: scale(1); }
      25% { opacity: 1; transform: scale(1.23); }
      50% { opacity: 0.7; transform: scale(0.94); }
      75% { opacity: 0.9; transform: scale(1.1); }
    }
    body.loading > *:not(#loader-overlay) {
      display: none !important;
    }
    body.loading {
      overflow: hidden !important;
    }

    /* === Styles for Startup Advisory content overlay === */
    #startup-advisory-content {
      display: none;
      max-width: 1100px;
      margin: 40px auto;
      padding: 24px;
      background: var(--white);
      border-radius: 16px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.11);
      color: var(--blue);
      position: relative;
      z-index: 5000;
    }
    #startup-advisory-content button#start-advisory-close {
      position: absolute;
      top: 14px;
      right: 22px;
      background: var(--green);
      color: var(--blue);
      border: none;
      padding: 8px 20px;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      font-size: 1.15rem;
      transition: background 0.16s ease;
    }
    #startup-advisory-content button#start-advisory-close:hover,
    #startup-advisory-content button#start-advisory-close:focus {
      background: var(--blue);
      color: var(--white);
      outline: none;
    }
  </style>
</head>
